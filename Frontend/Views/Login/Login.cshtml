@{
    ViewData["Title"] = "Login";
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>Login</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        if (localStorage.theme === 'dark' || (!('theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
          document.documentElement.classList.add('dark')
        } else {
          document.documentElement.classList.remove('dark')
        }
    </script>
    <style>
        .focus-ring:focus { outline: 2px solid transparent; box-shadow: 0 0 0 4px rgba(124,58,237,0.12); }
    </style>
</head>
<body class="bg-gray-100 text-gray-900 min-h-screen flex items-center justify-center">

    <main class="w-full max-w-md bg-white rounded-2xl shadow-lg p-8">
        <header class="mb-6 text-center">
            <h1 class="text-2xl font-semibold">Login</h1>
        </header>

        <form id="loginForm" class="space-y-5" novalidate>
            <div>
                <label for="loginInput" class="block text-sm font-medium mb-1">Login</label>
                <input id="loginInput" name="Login" type="text" required
                       class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring focus-ring"
                       placeholder="Seu login" />
                <p id="loginError" class="mt-1 text-xs text-red-500 hidden"></p>
            </div>

            <div>
                <label for="cpfInput" class="block text-sm font-medium mb-1">CPF</label>
                <input id="cpfInput" name="Cpf" type="text" required pattern="^\d{3}\.\d{3}\.\d{3}-\d{2}$"
                       inputmode="numeric"
                       placeholder="000.000.000-00"
                       class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring focus-ring" />
                <p id="cpfError" class="mt-1 text-xs text-red-500 hidden"></p>
                <!-- Link para cadastro -->
                <a href="https://localhost:7028/Login/Registrar" class="mt-2 inline-block text-sm text-purple-600 hover:underline">
                    Não tenho usuário cadastrado.
                </a>
            </div>

            <div>
                <button id="btnVerificar" type="submit"
                        class="w-full inline-flex justify-center items-center gap-2 px-4 py-3 rounded-lg font-medium text-white bg-purple-600 hover:bg-purple-700 focus-ring">
                    Entrar
                </button>
            </div>

            <div id="loginMessage" class="text-sm mt-2"></div>
        </form>
    </main>
</body>

<script src="~/js/Login.js" asp-append-version="true"></script>