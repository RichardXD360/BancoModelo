@{
    ViewData["Title"] = "Login";
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>Login</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        if (localStorage.theme === 'dark' || (!('theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
          document.documentElement.classList.add('dark')
        } else {
          document.documentElement.classList.remove('dark')
        }
    </script>
    <style>
        .focus-ring:focus { outline: 2px solid transparent; box-shadow: 0 0 0 4px rgba(124,58,237,0.12); }
    </style>
</head>
<body class="bg-gray-100 text-gray-900 min-h-screen flex items-center justify-center p-6">

    <main class="w-full max-w-2xl bg-white rounded-2xl shadow-lg p-8">
        <header class="mb-6 text-center">
            <h1 class="text-2xl font-semibold">Cadastro de Usuário</h1>
        </header>

        <form id="registerForm" class="space-y-5" novalidate>
            <div>
                <label for="nomeCompleto" class="block text-sm font-medium mb-1">Nome Completo</label>
                <input id="nomeCompleto" name="Nome" type="text" minlength="8" maxlength="48" required
                       class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring focus-ring"
                       placeholder="Ex: João da Silva" />
                <p id="nomeCompletoError" class="mt-1 text-xs text-red-500 hidden"></p>
            </div>

            <div>
                <label for="username" class="block text-sm font-medium mb-1">Nome de Usuário</label>
                <input id="username" name="Login" type="text" minlength="8" maxlength="18" required
                       class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring focus-ring"
                       placeholder="username123" />
                <p id="usernameError" class="mt-1 text-xs text-red-500 hidden"></p>
            </div>

            <div>
                <label for="cpf" class="block text-sm font-medium mb-1">CPF</label>
                <input id="cpf" name="Cpf" type="text" inputmode="numeric" required
                       pattern="^\d{3}\.\d{3}\.\d{3}-\d{2}$"
                       placeholder="000.000.000-00"
                       class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring focus-ring" />
                <p id="cpfError" class="mt-1 text-xs text-red-500 hidden"></p>
            </div>

            <div>
                <label for="agencia" class="block text-sm font-medium mb-1">Agência</label>
                <select id="agencia" name="AgenciaId" required
                        class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring focus-ring">
                    <option value="1">MATRIZ</option>
                </select>
                <p id="agenciaError" class="mt-1 text-xs text-red-500 hidden"></p>
            </div>

            <div class="pt-2">
                <button id="btnCadastrar" type="submit"
                        class="w-full px-4 py-3 rounded-lg font-medium text-white bg-purple-600 hover:bg-purple-700 focus-ring">
                    Cadastrar
                </button>
            </div>

            <div id="formMessage" class="text-sm mt-2"></div>
        </form>
    </main>
</body>

<script src="~/js/Registrar.js" asp-append-version="true"></script>